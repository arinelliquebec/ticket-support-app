# ============================================
# ðŸŽ« Ticket Support App - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# cp .env.local.example .env.local

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string (Supabase recommended)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# Direct connection URL (for Prisma migrations)
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# ============================================
# SUPABASE (Required for file uploads via Supabase)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ============================================
# AWS S3 (Required for file attachments)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-bucket-name"
AWS_S3_REGION="us-east-1"

# Legacy S3 bucket name (some routes still use this)
S3_BUCKET_NAME="your-bucket-name"

# ============================================
# REDIS - Upstash (Optional - for caching & rate limiting)
# ============================================
UPSTASH_REDIS_REST_URL="https://[YOUR-REDIS].upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# ============================================
# EMAIL - Resend (Optional - for email notifications)
# ============================================
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="support@yourdomain.com"

# ============================================
# VERCEL (Auto-set in Vercel deployments)
# ============================================
# NEXT_PUBLIC_VERCEL_URL is automatically set by Vercel

# ============================================
# DEVELOPMENT OPTIONS (Optional)
# ============================================
# Enable rate limiting in development (disabled by default)
ENABLE_RATE_LIMIT_DEV="false"

# Enable query performance metrics logging
ENABLE_QUERY_METRICS="false"
